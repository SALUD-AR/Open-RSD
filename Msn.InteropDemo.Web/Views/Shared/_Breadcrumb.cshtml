@model Msn.InteropDemo.Web.Models.BreadcrumbViewModel
@{ 
    var isFirst = true;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        @foreach (var item in Model.Items)
        {
            if (!item.IsActive)
            {
                if (isFirst)
                {
                    <li class="breadcrumb-item">
                        <a href="@item.ToURL" style="text-decoration:none;">
                            <span class="fa fa-building" style="color:darkblue; font-size:1.5rem;"></span>
                            @item.Text
                        </a>
                    </li>
                    isFirst = false;
                }
                else
                {
                    <li class="breadcrumb-item">
                        <a href="@item.ToURL" style="text-decoration:none;">@item.Text</a>
                    </li>
                }
            }
            else
            {
                if (isFirst)
                {
                    <li class="breadcrumb-item active">
                        <span class="fa fa-building" style="color:darkblue; font-size:1.5rem;"></span>
                        @item.Text
                    </li>

                    isFirst = false;
                }
                else
                {
                    <li class="breadcrumb-item active">@item.Text</li>
                }
            }
        }
    </ol>
</nav>
