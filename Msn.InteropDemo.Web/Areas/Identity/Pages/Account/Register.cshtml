@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h1>@ViewData["Title"]</h1>
<h4>Registrase para operar</h4>

<hr />

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="card">
        <div class="card-header">
            Información Personal
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Input.Apellido"></label>
                        <input asp-for="Input.Apellido" class="form-control" />
                        <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Input.Nombre"></label>
                        <input asp-for="Input.Nombre" class="form-control" />
                        <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            Información del Usuario
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Registrarme</button>
                </div>
            </div>
        </div>

    </div>
    
</form>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
