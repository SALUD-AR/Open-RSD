<input id="aplicarVacunaCurrentEvolucionVacunaId" type="hidden" />

<div class="modal fade" id="aplicarVacunaModal">

    <form id="formAplicarVacunaModal" name="formAplicarVacunaModal" role="form">

        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Aplicar Vacuna</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body pt-2">
                    <div class="mb-2 alert alert-primary small">
                        <div>
                            <span><b>Snomed CT:</b> </span> <span id="vacunaAplicacionSctId"></span>
                        </div>
                        <div>
                            <span><b>Snomed Term:</b> </span> <span id="vacunaAplicacionSctTerm"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group date" id="aplicarVacunaFecha" data-target-input="nearest">
                            <input id="aplicarVacunaFechaInput"
                                   name="aplicarVacunaFechaInput"
                                   type="text"
                                   class="form-control form-control-sm datetimepicker-input valid"
                                   data-target="#aplicarVacunaFecha"
                                   data-val="true"
                                   data-val-required="La fecha de aplicacón es requerida."
                                   value="" />
                            <div class="input-group-append"
                                 data-target="#aplicarVacunaFecha"
                                 data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                        <span class="text-danger field-validation-valid"
                              data-valmsg-for="aplicarVacunaFechaInput"
                              data-valmsg-replace="true">
                        </span>
                    </div>
                    <div>
                        <select id="selectAplicarVacunaEsquemaId"
                                name="selectAplicarVacunaEsquemaId"
                                class="form-control form-control-sm"
                                data-val="true"
                                data-val-required="El Equema es requerido."></select>
                        <span class="text-danger field-validation-valid"
                              data-valmsg-for="selectAplicarVacunaEsquemaId"
                              data-valmsg-replace="true">
                        </span>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button id="btnConfirmAplicarVacuna"
                            type="button"
                            class="btn btn-primary btn-sm"
                            onclick="aplicarVacuna()">
                        <span> Aplicar</span>
                    </button>
                    <button id="btnCancelAplicarVacuna"
                            type="button"
                            class="btn btn-secondary btn-sm"
                            data-dismiss="modal">
                        Cancelar
                    </button>
                </div>
            </div>
        </div>

    </form>
</div>
