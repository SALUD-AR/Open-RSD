@model Msn.InteropDemo.ViewModel.Response.CoeficienteBusquedaResponce


@{
    string css_score = "";
    string css_score_item = "";

    if (Model.CoeficienteTotalFinal <= Convert.ToDecimal(0.5))
    {
        css_score = "text-danger";
    }
    else if ((Model.CoeficienteTotalFinal > Convert.ToDecimal(0.5)) && (Model.CoeficienteTotalFinal < Convert.ToDecimal(0.9)))
    {
        css_score = "text-secondary";
    }
    else if (Model.CoeficienteTotalFinal > Convert.ToDecimal(0.9))
    {
        css_score = "text-success";
    }

}

